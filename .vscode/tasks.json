{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "docker build --build-arg GOPROXY=https://mirrors.aliyun.com/goproxy/ -t flikas/shadowsocks-webapp:1.0 -t flikas/shadowsocks-webapp:latest .",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "heroku build",
            "type": "shell",
            "command": "heroku",
            "args": [
                "container:push",
                "web",
                "--arg",
                "GOPROXY=https://mirrors.aliyun.com/goproxy/",
                "-a",
                "flikas-ss-us"
            ],
            "group": "build"
        },
        {
            "label": "heroku",
            "type": "shell",
            "command": "heroku",
            "args": [
                "container:release",
                "web",
                "-a",
                "flikas-ss-us"
            ],
            "dependsOn": [
                "heroku build"
            ],
            "group": "build",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}